<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bloks">

    <Button
        android:id="@+id/buttonı"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/round_bg"
        android:fontFamily="sans-serif-medium"
        android:onClick="goToBlokI"
        android:text="I Qrup"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonıı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonıı"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/round_bg"
        android:fontFamily="sans-serif-medium"
        android:onClick="goToBlokII"
        android:text="II Qrup"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonı"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonııı"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/round_bg"
        android:fontFamily="sans-serif-medium"
        android:onClick="goToBlokIII"
        android:text="III Qrup"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonıv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonı" />

    <Button
        android:id="@+id/buttonıv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:background="@drawable/round_bg"
        android:fontFamily="sans-serif-medium"
        android:onClick="goToBlokIV"
        android:text="IV Qrup"
        android:textSize="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonııı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonııı" />

    <Button
        android:id="@+id/geri"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/round_bg"
        android:drawableLeft="@drawable/baseline_home_24"
        android:fontFamily="sans-serif-medium"
        android:onClick="goToGeri"
        android:text="Geri"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonıv" />

</androidx.constraintlayout.widget.ConstraintLayout>